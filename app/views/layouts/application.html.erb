<!DOCTYPE html>
<html>
  <head>
    <title>Recipelog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    
        <nav class="navbar has-background-primary-dark">
          <div class="navbar-brand">
          <%= link_to root_path,class: "navbar-item" do %>
            <figure>
              <%= image_tag 'cook-index.png' ,class: "image is-48x48 ml-6"%>
            </figure>
          <% end %>
              <a class="navbar-burger" data-target="my-menu">
                  <span aria-hidden="true"></span>
                  <span aria-hidden="true"></span>
                  <span aria-hidden="true"></span>
              </a>
          </div>
          <% if user_signed_in?  %>
          <div id="my-menu" class="navbar-menu">
            <div class="navbar-end">
              <%= link_to "レシピ一覧", recipes_path,class: "navbar-item" %>
              <%= link_to "新規投稿", new_recipe_path,class: "navbar-item" %>
              <%= link_to "ユーザー一覧", users_path,class: "navbar-item" %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: "navbar-item" %>
            </div>
          </div>
          <% else %>
           <div id="my-menu" class="navbar-menu">
              <div class="navbar-end">
                <%= link_to "レシピ一覧", recipes_path,class: "navbar-item" %>
                <%= link_to "ユーザー一覧", users_path,class: "navbar-item" %>
                <%= link_to "ログイン", user_session_path,class: "navbar-item" %>
                <%= link_to "新規登録", new_user_registration_path,class: "navbar-item" %>
              </div>
            </div>
          <% end %> 
      </nav>
    <%= yield %>
  </body>
</html>
